.notificationsCenter
  position fixed
  width 500px
  right 10px
  top 0px
  padding 10px

  .notification
    border-radius(4px)
    position relative
    padding 5px
    padding-left 7px
    padding-right 10px
    margin-bottom 4px

    &.notification-enter
      opacity 0.01
      transform translateX(20px)
      transition all .3s ease-in

    &.notification-enter.notification-enter-active
      transform translateX(0px)
      opacity 1

    &.notification-leave
      opacity 1
      transition all .5s ease-in

    &.notification-leave.notification-leave-active
      transform translateX(40px)
      opacity 0.01

    &.notification-error
      color white
      background-color rgba(app-red, .5)

    &.notification-default
      background-color rgba(white, .3)

    &.notification-success
      background-color rgba(app-green, .3)
      margin-bottom 8px

    .remove
      position absolute
      right 9px
      top 3px
      color app-red
      cursor pointer

      &.is-hidden
        display none



