.registration
  padding 50px 100px


  h1
    font-family 'Lucida Grande'
    font-size 20px
    margin-bottom 50px

  .session-message
    border-radius 3px
    display inline-block
    padding 5px
    width auto
    color white
    background-color app-orange
    margin-bottom 20px

  .signUp-form, .login-form
    background-color rgba(app-light-gray, .5)
    border-radius(4px)
    padding 30px
    width 540px
    border 1px solid app-gray

    input[type="text"], input[type="password"]
      display block
      width 400px
      margin-bottom 4px
      padding 5px
      border none
      border-bottom 1px solid app-red
      outline none

    input[type="submit"]
      margin-top 20px

    .alternateRegistrationAction
      margin-left 10px
      color app-blue
      text-decoration none
      border-bottom 1px solid app-blue